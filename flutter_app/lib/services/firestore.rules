rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection (admins manage)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                    && (request.auth.uid == userId
                        || request.auth.token.role == 'admin');
    }

    // Vendors collection
    match /vendors/{vendorId} {
      allow read: if true; // anyone can view vendor profile

      // Only admin can update vendor meta (approval, category, etc.)
      allow write: if request.auth != null
                   && request.auth.token.role == 'admin';

      // Products inside vendor
      match /products/{productId} {
        allow read: if true;

        allow create: if request.auth != null
                      && request.auth.token.role == 'vendor'
                      && request.auth.uid == vendorId
                      && request.resource.data.vendorId == vendorId;

        allow update, delete: if request.auth != null
                              && request.auth.token.role == 'vendor'
                              && request.auth.uid == resource.data.vendorId;

        // Admin override
        allow write: if request.auth != null && request.auth.token.role == 'admin';
      }

      // Services inside vendor
      match /services/{serviceId} {
        allow read: if true;

        allow create: if request.auth != null
                      && request.auth.token.role == 'vendor'
                      && request.auth.uid == vendorId
                      && request.resource.data.vendorId == vendorId;

        allow update, delete: if request.auth != null
                              && request.auth.token.role == 'vendor'
                              && request.auth.uid == resource.data.vendorId;

        // Admin override
        allow write: if request.auth != null && request.auth.token.role == 'admin';
      }
    }

    // Orders (customers place, vendors/admin read)
    match /orders/{orderId} {
      allow create: if request.auth != null
                    && request.auth.token.role == 'customer'
                    && request.resource.data.customerId == request.auth.uid;

      allow read: if request.auth != null
                  && (request.auth.token.role == 'admin'
                      || request.auth.token.role == 'vendor'
                      || request.resource.data.customerId == request.auth.uid);

      allow update: if request.auth != null
                    && (request.auth.token.role == 'admin'
                        || (request.auth.token.role == 'vendor'
                            && request.auth.uid == resource.data.vendorId));
    }
  }
}
